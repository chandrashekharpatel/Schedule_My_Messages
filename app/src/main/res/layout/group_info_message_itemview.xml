<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@drawable/bg_send_message"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gInfo_Message_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is the message"
            android:textColor="@color/textMessageColor"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gInfo_Message_item_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textColor="@color/statusBar_TextColor"
                android:textSize="@dimen/statusBar_TextSize"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/gInfo_Message_item_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:maxLines="1"
                android:gravity="bottom|right"
                android:paddingRight="5dp"
                android:text="12/12/2012"
                android:textSize="@dimen/statusBar_TextSize"
                android:textColor="@color/statusBar_TextColor" />

            <TextView
                android:id="@+id/gInfo_Message_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:maxLines="1"
                android:gravity="bottom"
                android:text="12:12 AM"
                android:textSize="@dimen/statusBar_TextSize"
                android:textColor="@color/statusBar_TextColor" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/gInfo_Message_item_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:textColor="@color/statusBar_TextColor"/>
                <ImageView
                    android:id="@+id/gInfo_Message_item_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="2dp"
                    android:src="@drawable/ic_done_all"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>