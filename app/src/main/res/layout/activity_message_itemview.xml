<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_itemview"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:id="@+id/layMIV_MainListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/imgMIV_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/frame_bg_color_photo" />

                <TextView
                    android:id="@+id/imgText_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/textTitleColor"
                    android:textSize="33dp" />

                <ImageView
                    android:id="@+id/circle_crop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_round_shape" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMIV_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Name"
                        android:textColor="@color/itemview_TextViewColor"
                        android:textSize="@dimen/itemviewTitleFnSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMIV_idNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="100"
                        android:textColor="@color/itemview_TextViewColor"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMIV_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="this is the message"
                        android:textColor="@color/itemview_TextViewColor"
                        android:textSize="@dimen/itemviewSubTitleFnSize" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:singleLine="true">

                            <TextView
                                android:id="@+id/tvMIV_dayRemain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="Date"
                                android:textColor="@color/itemview_TextViewColor"
                                android:textSize="14dp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tvMIV_timeRemain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:textColor="@color/statusBar_TextColor"
                                android:textSize="@dimen/statusBar_TextSize" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMIV_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|bottom"
                            android:padding="2dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:text="30/06/18"
                            android:textColor="@color/statusBar_TextColor"
                            android:textSize="@dimen/statusBar_TextSize" />

                        <TextView
                            android:id="@+id/tvMIV_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:text="10:55 AM"
                            android:textColor="@color/statusBar_TextColor"
                            android:textSize="@dimen/statusBar_TextSize" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3">

                            <TextView
                                android:id="@+id/tvMIV_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/statusBar_TextColor"
                                android:textSize="10dp" />

                            <ImageView
                                android:id="@+id/swiMIV_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>