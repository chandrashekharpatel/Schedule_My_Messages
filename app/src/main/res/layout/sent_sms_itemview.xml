<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sentSMS_ll_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="5dp"
        android:background="@drawable/bg_send_message"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sentSMS_ll_messageBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/sentSMS_phNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7878797979"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sentSMS_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sent SMS"
            android:textColor="@color/textMessageColor"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sentSMS_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:visibility="invisible"
                android:textColor="@color/statusBar_TextColor"
                android:textSize="@dimen/statusBar_TextSize" />

            <TextView
                android:id="@+id/sentSMS_gId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:visibility="invisible"
                android:textColor="@color/statusBar_TextColor"
                android:textSize="@dimen/statusBar_TextSize" />

            <TextView
                android:id="@+id/sentSMS_mId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:visibility="invisible"
                android:textColor="@color/statusBar_TextColor"
                android:textSize="@dimen/statusBar_TextSize" />

            <TextView
                android:id="@+id/sentSMS_SIM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#000"
                android:visibility="invisible"
                android:textSize="@dimen/statusBar_TextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sentSMS_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="right"
                android:maxLines="1"
                android:text="12/12/2012"
                android:paddingRight="5dp"
                android:textColor="@color/statusBar_TextColor"
                android:textSize="@dimen/statusBar_TextSize" />

            <TextView
                android:id="@+id/sentSMS_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingRight="5dp"
                android:maxLines="1"
                android:text="12:12 AM"
                android:textColor="@color/statusBar_TextColor"
                android:textSize="@dimen/statusBar_TextSize" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp">
                <ImageView
                    android:id="@+id/sentSMS_status"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_done_all"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>