<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:angle="270.0"
                android:endColor="#2c60fff7"
                android:startColor="#2c60fff7" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#900c3e" />
        </shape>
    </item>
</layer-list>